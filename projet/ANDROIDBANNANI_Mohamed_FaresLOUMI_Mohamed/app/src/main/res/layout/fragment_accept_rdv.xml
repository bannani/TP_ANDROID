<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
android:layout_width="match_parent"
android:layout_height="match_parent"
android:layout_gravity="center"
android:layout_marginTop="20dp"
android:gravity="center_horizontal"
android:orientation="vertical">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="248dp"
            android:layout_height="wrap_content"
            android:orientation="horizontal">


            <com.lamudi.phonefield.PhoneEditText
                android:id="@+id/editTextPhoneNumber"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:drawablePadding="10dp"
                android:focusableInTouchMode="false">

            </com.lamudi.phonefield.PhoneEditText>

        </LinearLayout>

        <EditText
            android:id="@+id/editTextDate"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/ic_calendar_outline_black_24dp"
            android:drawablePadding="10dp"
            android:hint="Date"
            android:focusableInTouchMode="false"/>


        <EditText
            android:id="@+id/idTxtLatitude"
            android:layout_width="253dp"
            android:layout_height="wrap_content"
            android:drawablePadding="10dp"
            android:hint="Latitude"
            android:inputType="textPersonName" />

        <EditText
            android:id="@+id/idLongitude"
            android:layout_width="253dp"
            android:layout_height="wrap_content"
            android:drawablePadding="10dp"
            android:hint="Longitude"
            android:inputType="textPersonName" />

        <Button
            android:id="@+id/buttonAcceptRDV"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp"
            android:background="@drawable/buttonstylepink"
            android:drawableLeft="@drawable/ic_send_black_24dp"
            android:text="Accept RDV"
            android:textColor="#fff" />

        <Button
            android:id="@+id/buttonRefuseRDV2"
            android:layout_width="251dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp"
            android:background="@drawable/buttonstylepink"
            android:drawableLeft="@drawable/ic_send_black_24dp"
            android:text="refuse RDV"
            android:textColor="#fff" />
    </LinearLayout>






</LinearLayout>