<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".NewRDVActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimaryDark"
        android:orientation="vertical"
        android:padding="50dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorPrimaryDark"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imageid"
                android:layout_width="81dp"
                android:layout_height="80dp"
                android:src="@drawable/logo" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="@string/Rendez_vous"
                android:textColor="#fff"
                android:textSize="30sp" />

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical">

        <Button
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:drawablePadding="10dp"
            android:onClick="onClickSelectContact"
            android:text="Select a Contact" />

        <LinearLayout
            android:layout_width="248dp"
            android:layout_height="wrap_content"
            android:orientation="horizontal">


            <com.lamudi.phonefield.PhoneEditText
                android:id="@+id/editTextPhoneNumber"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:drawablePadding="10dp"
                android:focusableInTouchMode="false">

            </com.lamudi.phonefield.PhoneEditText>

            <Button
                android:id="@+id/buttonAdd"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="40dp"
                android:background="@drawable/buttonstylepink"
                android:drawableLeft="@android:drawable/ic_menu_add"
                android:onClick="onClickAdd"
                android:text="Add"
                android:textColor="#fff" />
        </LinearLayout>

        <EditText
            android:id="@+id/editTextDate"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/ic_calendar_outline_black_24dp"
            android:drawablePadding="10dp"
            android:hint="Date"
            android:onClick="selectDate"
            android:focusableInTouchMode="false"/>

        <EditText
        android:id="@+id/idTxtNumber"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:drawablePadding="10dp"
        android:inputType="textPersonName" />

    <TextView
        android:id="@+id/lat"
        android:layout_width="250dp"
        android:layout_height="40dp"
        android:background="#F3F3F3"
        android:drawablePadding="10dp"
        android:text="" />

        <Button
            android:id="@+id/buttonChangeLoc"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp"
            android:background="@drawable/buttonstylepink"
            android:drawableLeft="@android:drawable/ic_dialog_map"
            android:text="Change localisation"
            android:textColor="#fff"
            android:onClick="onClickGetFromMap"/>

    <Button
        android:id="@+id/buttonSendRDV"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:background="@drawable/buttonstylepink"
        android:drawableLeft="@drawable/ic_send_black_24dp"
        android:text="@string/makeRDV"
        android:textColor="#fff"
        android:onClick="onClickSend"/>
    </LinearLayout>

</LinearLayout>